{
    "extends": ["airbnb"],
    #
    "env": {
        "browser": true,
        "node": true,
        "es6": true,
        "jquery": true,
        "mongo": true
    },
    "parserOptions":{
      "ecmaFeatures": {
      	"experimentalObjectRestSpread": true,
      	"jsx": true
      },
      "sourceType": "module",
    },
    "plugins": [
        "react",
    ],
    "rules":{
      "prefer-const": 0,
      "new-cap": 0,
      "one-var": 0,
      "space-in-parens": 0,
      "array-bracket-spacing": [2, "always"],
      "react/jsx-curly-spacing": [2, "always", {"spacing": {"objectLiterals": "never"}}],
      "func-names": 0,
      "jsx-pascal-case": [0, { allowAllCaps: true, ['TD', 'TR',] }],
      "no-else-return": 0,
      "no-underscore-dangle": 0,
      # "import/no-unresolved": [
      #   2, { "ignore": ["^meteor/"] }
      # ],
      }
}
